{
  "name": "smart-tagz",
  "version": "0.3.2",
  "license": "MIT",
  "description": "A Smart input tags component for Vue 3",
  "author": {
    "name": "Prabhu Murthy",
    "url": "https://www.prabhumurthy.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "rollup": "rimraf ./dist && rollup -c",
    "lint:css": "stylelint src/**/*.vue --custom-syntax postcss-html",
    "lint": "eslint src/**/*.vue",
    "lint:all": "yarn lint:css && yarn lint",
    "prepare": "husky install",
    "snyk": "snyk test",
    "format": "prettier --write src/**/*.{vue,js}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prabhuignoto/smart-tagz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.scss": [
      "stylelint src/**/*.scss",
      "git add"
    ],
    "src/**/*.vue": [
      "eslint src/**/*.vue",
      "git add"
    ]
  },
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "vue-feather-icons": "^5.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-sucrase": "^4.0.4",
    "@types/nanoid": "^3.0.0",
    "@types/vue-feather-icons": "^5.0.4",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.38",
    "eslint": "^8.23.0",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.54.7",
    "snyk": "^1.994.0",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vue": "^3.2.38",
    "vue-template-compiler": "2.7.10"
  },
  "files": [
    "dist",
    "types"
  ],
  "peerDependencies": {
    "vue-feather-icons": "^5.1.0"
  },
  "main": "dist/smart-tagz.js",
  "module": "dist/smart-tagz.esm.js",
  "umd": "dist/smart-tagz.umd.js"
}
